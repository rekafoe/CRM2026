{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",             
    "moduleResolution": "node",
    "outDir": "dist",
    "removeComments": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "allowJs": false,
    "checkJs": false,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "src/types.d.ts", "migrations", "../shared"],
  "exclude": ["node_modules", "dist"]
}
